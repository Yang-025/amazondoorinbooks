{
  "name": "都逛逛-網路書店評價參考",
  "description" : "想看amazon的評價? 我幫你。 提供博客來、kobo、amazon相互參考",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "./icon/icon16.png",
    "32": "./icon/icon32.png",
    "180": "./icon/icon180.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.books.com.tw/*"],
      "js": ["scripts/main.js", "scripts/books.js"],
			"css": ["main.css"]
    },
    {
      "matches": ["*://*.kobo.com/*"],
      "js": ["scripts/main.js", "scripts/kobo.js"],
			"css": ["main.css"]
    }
  ]
}
